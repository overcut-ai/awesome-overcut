{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "lib": ["es2023"],
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@prisma/client": ["__mocks__/@prisma/client.ts"]
    }
  },
  "include": ["src", "src/@types/**/*.d.ts"]
}
